          execute:
          - '../run_publish_release_set.sh'
          - '--version-name'
          - 'default'
          - '--platform'
          - 'azure'
          - '--phase'
          - 'publish-images'
          image: europe-docker.pkg.dev/gardener-project/releases/cicd/glci-job-image:0.4.0
